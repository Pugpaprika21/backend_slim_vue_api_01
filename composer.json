{
    "require": {
        "slim/slim": "4.*",
        "slim/psr7": "^1.6",
        "illuminate/database": "^10.13",
        "slim/twig-view": "^3.3"
    },
    "autoload": {
        "files": [
            "app/helper/function.php",
            "src/function/@@helpers.php",
            "src/function/@@mysqli_db.php",
            "src/classes/buliders/DBConfig.php",
            "src/classes/buliders/Query.php",
            "src/classes/buliders/Bulider.php",
            "src/classes/Http.php",
            "src/classes/API.php",
            "src/classes/Str.php"
        ],
        "psr-4": {
            "App\\": "app/",
            "App\\Controllers\\": "app/controllers/",
            "App\\Controllers\\Base\\": "app/controllers/base/",
            "App\\Foundation\\": "app/foundation/",
            "App\\Foundation\\Database\\": "app/foundation/database/",
            "App\\Models\\": "app/models/"
        }
    },
    "config": {
        "allow-plugins": {
            "kylekatarnls/update-helper": true
        }
    }
}